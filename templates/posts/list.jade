extends ../Layout 

block content
  h1 Here are the tasks
  ul
    each post in posts
      li
        a(href="/posts/#{post._id}")
          span.title=task.title
          br
          span.body=task.body
          br
          span.tags=task.tags
          br
          span.created=task.created
          br
          span.athro=task.author
        form#deleteForm(action="/posts/#{post._id}?_method=DELETE", method="POST", enctype="application/x-www-form-urlencoded")
          button#delete(type="submit") Delete